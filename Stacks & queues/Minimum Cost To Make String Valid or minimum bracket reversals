Method 1->

int findMinimumCost(string str) {
   stack<char> s;
    if(str.length()%2==1){
        return -1;
    }
    for(int i=0;i<str.length();i++){
        char ch=str[i];
        if(ch=='{'){
            s.push(ch);
        }
        
        else{
            if(!s.empty() && s.top()=='{'){
                s.pop();
            }
            else{
                s.push(ch);
            }
        }
    }
    int a=0,b=0;
    while(!s.empty()){
        if(s.top()=='{'){
            a++;
        }
        else {
            b++;
        }
        s.pop();
    }
    int ans= (a+1)/2 + (b+1)/2;
    return ans;
}

Method 2->

int countRev (string s)
{
    if(s.length()%2!=0) return -1;
    
    int open=0,close=0,rev=0;
    
    for(int i=0;i<s.length();i++){
        if(s.at(i)=='{') open++;
        
        else{
            if(open==0) close++;
            else open--;
        }
    }
    rev=(int)(ceil(open/2.0)+ceil(close/2.0));
    return rev;
}
TC->O(N)
SC->O(1)
TC->O(n)
SC->O(n)
